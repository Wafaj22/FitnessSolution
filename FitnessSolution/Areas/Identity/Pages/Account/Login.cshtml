@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login100-pic">
    <div class ="js-tilt" data-tilt>
        <a href="https://www.freepik.com/vectors/logo" alt="Logo vector created by macrovector - www.freepik.com">
            <img src="~/img/img-01.png" alt="">
        </a>
    </div>
    <div class="text-center p-t-136">
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="txt2">
            Register as a new user
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
        </a>
        <div><a id="forgot-password" asp-page="./ForgotPassword" class="txt2">Forgot your password?</a></div>  
    </div>
</div>

<form id="account" method="post" class="login100-form">
    <span class="login100-form-title">
        @ViewData["Title"]
    </span>
    <div class="wrap-input100">
        <input asp-for="Input.Email" class="input100" placeholder="Email">        
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>

    <div class="wrap-input100">
        <input asp-for="Input.Password" class="input100" placeholder="Password">        
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>

    <div class="text-center p-t-12">
        <div class="checkbox">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="container-login100-form-btn">
        <div class="wrap-login100-form-btn">
            <div class="login100-form-bgbtn"></div>
            <button class="login100-form-btn" type="submit">
                Login
            </button>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
