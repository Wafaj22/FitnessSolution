@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="wrap-login100" style="width: 1200px; padding: 130px 130px 70px 100px;">
    <div class="login100-pic">
        <div class="js-tilt" data-tilt>
            <a href='https://www.freepik.com/vectors/frame'>
                <img src="~/img/img-01.png" style="padding-top: 50px;" alt="">
            </a>
        </div>
        <div class="text-center p-t-130">
            <a asp-controller="Home" asp-action="Index" class="txt2">
                Back to Home
                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <form class="login100-form" style="width: 500px;" id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="wrap-input100">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>
        <div class="wrap-input100">
            <label asp-for="Input.Name"></label>
            <input asp-for="Input.Name" class="form-control" disabled />
        </div>
        <div class="wrap-input100">
            <label asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="wrap-input100">
            <label asp-for="Input.DOB"></label>
            <input asp-for="Input.DOB" class="form-control" />
            <span asp-validation-for="Input.DOB" class="text-danger"></span>
        </div>
        <div class="wrap-input100">
            <label asp-for="Input.Role"></label>
            <input asp-for="Input.Role" class="form-control" disabled />
        </div>
        <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
                <div class="login100-form-bgbtn"></div>
                <button id="update-profile-button" type="submit" class="login100-form-btn">
                    Save
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
