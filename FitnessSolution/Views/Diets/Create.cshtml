@model FitnessSolution.Models.Diet

@{
    ViewData["Title"] = "Create Diet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        
<div class="wrap-login100" style="width: 1200px; padding: 130px 130px 70px 100px;">
                <div class="login100-pic">
                    <div class="js-tilt" data-tilt>
                        <a href='https://www.freepik.com/vectors/frame'>
                            <img src="~/img/img-meal.png" style="padding-top: 50px;" alt="">
                        </a>
                    </div>
                    <div class="text-center p-t-130">
                        <a asp-action="Index" class="txt2">
                            Back to List
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <form class="login100-form" style="width: 500px;" asp-action="Create" enctype="multipart/form-data">
                    <span class="login100-form-title" style="text-align: left; padding-bottom: 0px;">
                        @ViewData["Title"]
                    </span>
                    <a asp-action="Index" class="txt2"  style="padding-bottom: 30px;">
                        Back to List
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="wrap-input100">
                        <label asp-for="DietTitle" class="control-label"></label>
                        <input asp-for="DietTitle" class="form-control" />
                        <span asp-validation-for="DietTitle" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100">
                        <label asp-for="DietDescription" class="control-label"></label>
                        <input asp-for="DietDescription" class="form-control" style="height: 200px;" />
                        <span asp-validation-for="DietDescription" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100">
                        <label asp-for="Type" class="control-label"></label>
                        <select asp-for="Type" class="form-control" style="height: 35px;">
                            <option value="Low-fat">Low-fat</option>
                            <option value="Low-crab">Low-crab</option>
                            <option value="Mediterranean">Mediterranean</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100">
                        <label asp-for="DietImageFile" class="control-label"></label>
                        <input asp-for="DietImageFile" accept="image/*" />
                        <span asp-validation-for="DietImageFile" class="text-danger"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" class="login100-form-btn">
                                Create
                            </button>
                        </div>
                    </div>
                </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
