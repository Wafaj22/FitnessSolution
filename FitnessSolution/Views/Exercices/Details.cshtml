@model FitnessSolution.Models.Exercice
@using System.Security.Claims

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="prtfolio-s-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <img src="@Model.ExerciceImageName" alt="">
            </div>
            <!-- .col -->
            <div class="col-sm-6">
                <div class="portfolio-s-head">
                    <h2 style="margin-bottom: 0px;">@Html.DisplayFor(model => model.ExerciceTitle)</h2>
                    @if (((ClaimsIdentity)User.Identity).FindFirst("Check").Value == "trainer")
                    {
                        <a asp-action="Edit" asp-route-id="@Model.ExerciceId">Edit</a>
                        <a asp-action="Index">| Back to List</a>
                    }
                <ul style="margin-top: 30px; margin-bottom: 0px;" class="portfolio-s-info">
                    <li><span>Category:</span>@Html.DisplayFor(model => model.Level)</li>
                </ul>
                <p>
                    @Html.DisplayFor(model => model.ExerciceDescription)
                </p>
                </div>

            </div>
            <!-- .col -->
            <div class="col-sm-12">
                <!-- .widget -->
                <!-- .col -->
                <aside class="sidebar">
                    <!-- .widget -->
                    <div class="widget">
                        <h3 class="widget-title">Workout</h3>
                        <div class="portfolio-filter">
                            <ul>
                            </ul>
                        </div>
                        <div class="widget-body">
                            <!-- .media -->
                            <div class="media">
                                <div class="media-left media-middle">
                                    <a asp-controller="Workouts" asp-action="Details" asp-route-id="@Model.WorkoutId">
                                        <img class="media-object" src="@("~/uploads/"+ Model.Workout.WorkoutImageName)" asp-append-version="true" alt="">
                                    </a>
                                </div>
                                <div class="media-body">
                                    <div class="media-body-inset">
                                        <h3><a asp-controller="Workouts" asp-action="Details" asp-route-id="@Model.WorkoutId">@Html.DisplayFor(modelItem => Model.Workout.WorkoutTitle)</a></h3>
                                        <div class="recent-post-date">@Html.DisplayFor(modelItem => Model.Workout.Type)</div>
                                    </div>
                                </div>
                            </div>
                            <!-- .media -->

                        </div>
                        <!-- .widget-body -->
                    </div>
                    <!-- .widget -->
                </aside>
                <!-- .sidebar -->
            </div>
            <!-- .col -->

        </div>
    </div>

</section>
